<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#0F0E0E"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/showResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/actualResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/actualResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/verLL"/>

    <LinearLayout
        android:id="@+id/verLL"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            style="@style/layoutStyleLinear"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ac"
                style="@style/btnstyleworking"
                android:layout_width="40dp"
                android:onClick="allClearAction"
                android:text="AC">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backSpace"
                style="@style/btnstyleworking"
                android:layout_width="40dp"
                android:onClick="backSpace"
                android:text="âŒ«">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                style="@style/btnstyleworking"
                android:id="@+id/btn_DIV"
                android:onClick="divison"
                android:text="/">
            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
        <LinearLayout
            style="@style/layoutStyleLinear"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_7"
                android:text="7">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:onClick="numberAction"
                android:id="@+id/btn_8"
                android:text="8">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_9"
                android:text="9">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyleworking"
                android:id="@+id/btn_MUl"
                android:onClick="multiplication"
                android:text="X">
            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
        <LinearLayout
            style="@style/layoutStyleLinear"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_4"
                android:text="4">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_5"
                android:text="5">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_6"
                android:text="6">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyleworking"
                android:onClick="subtraction"
                android:id="@+id/btn_Sub"
                android:text="-">
            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
        <LinearLayout
            style="@style/layoutStyleLinear"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_1"
                android:text="1">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_2"
                android:text="2">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_3"
                android:text="3">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyleworking"
                android:id="@+id/btn_Add"
                android:onClick="addition"
                android:text="+">
            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
        <LinearLayout
            style="@style/layoutStyleLinear"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_doubleDigit"
                android:text="00">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_0"
                android:text="0">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyle"
                android:id="@+id/btn_dot"
                android:text=".">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                style="@style/btnstyleworking"
                android:id="@+id/btn_Equal"
                android:onClick="resultEqual"
                android:text="="
                app:cornerRadius="0dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


